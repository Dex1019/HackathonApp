<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEC6"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.prince.hackathon.activity.UserLogin">

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/cbse" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />


    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" Select Your Exam"
        android:textColor="#F48000"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_ExamName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:hint="Exam name"
        android:textSize="20sp"
        android:typeface="normal" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/editText_Roll_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your Roll Number"
            android:inputType="textVisiblePassword"
            android:maxLines="1"
            android:textSize="20sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="16dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009049"
        android:fontFamily="monospace"
        android:gravity="center"
        android:inputType="text"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="56dp" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="15">


        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="5"
            android:paddingLeft="5dp"
            android:src="@drawable/gov" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="5"
            android:paddingLeft="5dp"
            android:src="@drawable/hrd" />

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="5"
            android:src="@drawable/logo2" />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_marginTop="10dp"
            android:background="#FEFEC6"
            android:src="@drawable/hacklog" />


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>



